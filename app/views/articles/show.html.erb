<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h1><%= @article.title%></h1>
  </div>
</div>
<div class="well col-xs-10 col-xs-offset-1">
  <%if @article.user %>
  <ul class="listing">
    <div class="row center">
      <div class="col-md-4 col-md-offset-4">
        <li><strong>Created by:</strong></li>
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user)%></li>
        <li class="article-title"> <%= link_to @article.user.username, user_path(@article.user)%></li>
        <li><small> <%= pluralize(@article.user.articles.count,"article") if @article.user.articles%></small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <h4><strong>Description</strong></h4>
  <hr>
  <%= simple_format(@article.description)%>
  <br>
  <div class="article-actions">
      <%= link_to "Edit this Article", edit_article_path(@article), class:"btn btn-xs btn-primary" %>
      <%= link_to "Delete this Article", article_path(@article), method: :delete, data: {confirm:"Are you sure you want to delete this Article?"}, class:"btn btn-xs btn-danger" %>
      <%= link_to "Back to Articles", articles_path, class:"btn btn-xs btn-success" %>
  </div>
</div>
